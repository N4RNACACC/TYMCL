<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        ShowInTaskbar="False"
        Width="800"
        Height="400"
        x:Class="TYMCL.StartupWindow"
        Title="TYMCL">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- 信息:START -->
        <Border Grid.Column="0" CornerRadius="25" Background="#c4cfff">
            <StackPanel Margin="30">
              
              <TextBlock Text="TYMCL" Classes="h2" FontSize="30" />
              <TextBlock Text="Copyright©N4RNAC 2025" FontSize="13" Margin="0 10 0 0"/>
              <TextBlock Text="Ver. 0.1 Alpha DEV" FontSize="13"/>
              
                   <StackPanel Margin="0 10 0 0">
                 
                        <StackPanel Orientation="Vertical">
                          <StackPanel Orientation="Horizontal">
                            <TextBlock Name="ReadyIcon" Text="&#xf141;" FontFamily="{DynamicResource IconFonts_Solid}" FontSize="13" Margin="0 0 5 0"/>
                            <TextBlock Text="准备" FontSize="13"/>
                          </StackPanel>
                      
                          <StackPanel Orientation="Horizontal">
                            <TextBlock Name="CheckEnvIcon" Text="&#xf141;" FontFamily="{DynamicResource IconFonts_Solid}" FontSize="13" Margin="0 0 5 0"/>
                            <TextBlock Text="检查环境" FontSize="13"/>
                          </StackPanel>
                      
                          <StackPanel Orientation="Horizontal">
                            <TextBlock Name="CheckUpdateIcon" Text="&#xf141;" FontFamily="{DynamicResource IconFonts_Solid}" FontSize="13" Margin="0 0 5 0"/>
                            <TextBlock Text="检查更新"  FontSize="13"/>
                          </StackPanel>
                      
                          <StackPanel Orientation="Horizontal">
                            <TextBlock Name="InitIcon" Text="&#xf141;" FontFamily="{DynamicResource IconFonts_Solid}" FontSize="13" Margin="0 0 5 0"/>
                            <TextBlock Text="完成初始化" FontSize="13"/>
                          </StackPanel>
                      
                     </StackPanel>
                 
                 
               </StackPanel>
              
            </StackPanel>
        </Border>
        <!-- 信息:END -->
        
        <!-- 主题图:START -->
        <Border Name="themeimageBorder" Grid.Column="2" CornerRadius="25">
          <Border.Background>
            <ImageBrush Source="avares://TYMCL/Assets/theme.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Top"/> 
          </Border.Background>
          <UserControl Name="ErrorPageUserControl"/>
        </Border>
        <!-- 主题图：END -->
      
        <!-- 错误界面:START -->
        
    </Grid>
</Window>
